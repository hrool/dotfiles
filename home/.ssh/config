# 全局配置（所有连接共用）
Host *
  # 密钥管理（根据实际使用选择一种）
  # 若使用1Password代理
  IdentityAgent ~/.1password/agent.sock
  # 若使用普通密钥文件
  # IdentityFile ~/.ssh/id_rsa
  
  # 连接保持与超时设置
  ServerAliveInterval 30
  ServerAliveCountMax 3
  ConnectTimeout 10
  
  # 代理转发（如需通过跳板机使用本地密钥）
  ForwardAgent yes

# 跳板机配置
Host wavelog
  HostName wavelog.bd8dhf.com
  User root

Host hk-proxy
  HostName 100.100.28.1
  User root
  ProxyJump wavelog  # 通过跳板机连接
  Port 2222

# GitHub连接配置
Host github.com
  HostName github.com
  User git
  ProxyJump wavelog  # 通过跳板机连接
  Compression no     # GitHub优化

